<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- translucent system bars -->
        <!--        <item name="android:windowTranslucentStatus">true</item>
                <item name="android:windowTranslucentNavigation">true</item>-->
        <!--选中状态icon的颜色和字体颜色-->
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
        <!--正常状态下字体颜色和icon颜色-->
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>


    <style name="AppTheme.TransparentActivity" parent="AppBaseTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="item_margin" >
        <item name="android:layout_marginTop">@dimen/item_margin</item>
        <!--<item_home name="android:layout_marginBottom">@dimen/item_margin</item_home>-->
    </style>

    <style name="margin_left_right" >
        <item name="android:layout_marginLeft">@dimen/pd_distance</item>
        <item name="android:layout_marginRight">@dimen/pd_distance</item>
    </style>

    <style name="item" >
        <item name="android:layout_marginLeft">@dimen/tv_size_title</item>
        <item name="android:layout_marginRight">@dimen/tv_size_title</item>
        <item name="android:layout_height">@dimen/height</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="line" >
        <item name="android:background">@color/default_grey</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/pd_distance</item>
    </style>

    <style name="num_size" >
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/num_text</item>
    </style>

    <style name="MyActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyOverflowButton" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@android:drawable/ic_menu_view</item>
    </style>

    <style name="MyToolbarTextStyle" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
